    <div class="ajs-dialog" tabindex="0">
        <div class="ajs-body">
            <div class="ajs-content"> Bạn chưa nhập đủ thông tin </div>
        </div>
        <div class="ajs-footer">
            <button class="ajs-ok">ĐỒNG Ý</button>
        </div>
    </div>
</div>


